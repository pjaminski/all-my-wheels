@model AllMyWheels.Models.CarListViewModel

@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>Szukaj</h1>
    <p class="lead">Szukaj szukaj szukaj</p>
    <p>
        <a href="https://asp.net" class="btn btn-primary btn-lg">Szukaj <span class="glyphicon glyphicon-search"></span></a>
    </p>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Znaleziono <span class="cars-count">@Model.Cars.Count()</span> modeli samochodów</p>
        <hr />
    </div>

</div>

<div class="container">
    @foreach(var car in Model.Cars)
    {
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <img class="car-img" src="@car.ImageUrl"/>
                    <span class="car-model-name">@car.ModelName</span>
                    <span class="car-producer-name">@car.ProducerName</span>
                    <span class="car-produced">@car.ProducedFrom - @car.ProducedTo</span>
                </div>
            </div>
        </div>
    }
</div>
